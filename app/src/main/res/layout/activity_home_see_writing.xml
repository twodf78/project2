<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeSeeWriting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_round_shape_stroke"
            android:src="@drawable/profilepic1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/thirdtrophy" />

                <TextView
                    android:id="@+id/oneSuggestTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="걸음마 떼는 인싸"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/oneSuggestImage"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/heartbar3" />

                <TextView
                    android:id="@+id/oneSuggestAttract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="50"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/oneSuggestJoinBtn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/blue"
                android:text="참여하기" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/oneSuggestName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="스터디 제목"
        android:textSize="30dp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="분야"
                    android:textColor="@color/darkgray" />
                <TextView
                    android:id="@+id/oneSuggestArea"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="코딩/IT"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="지역"
                    android:textColor="@color/darkgray" />
                <TextView
                    android:id="@+id/oneSuggestLocation"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="서울/경기"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="시작 시간"
                    android:textColor="@color/darkgray" />
                <TextView
                    android:id="@+id/oneSuggestStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="22-07-11  |  12:00"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="끝나는 시간"
                    android:textColor="@color/darkgray" />
                <TextView
                    android:id="@+id/oneSuggestFinishTime"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="22-08-29  |  24:00"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="수용 인원"
                    android:textColor="@color/darkgray" />
                <TextView
                    android:id="@+id/oneSuggestPeopleNow"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:text="2명"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="/"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/oneSuggestPeopleAll"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="4명"
                    android:textColor="@color/black" />
            </LinearLayout>


            <TextView
                android:id="@+id/oneSuggestContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="스터디 내용\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n스터디 내용" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>